// Tests keyword-driven if/else blocks returning values.

const ensure_module = import("test_support/ensure")
const ensure = ensure_module.ensure

fn classify(count: Int) Str {
  if count > 1 {
    return "plural"
  } else if count == 1 {
    return "singular"
  } else {
    return "empty"
  }
}

const plural = classify(3)
const singular = classify(1)
const zero = classify(0)

ensure(plural == "plural", "if branch returns happy path")
ensure(singular == "singular", "else-if branch honored")
ensure(zero == "empty", "final else runs when previous checks fail")

echo "structured flow control test passed"
